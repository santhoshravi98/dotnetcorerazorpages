@using  RestaurantData.Core
@model Restaurant

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <span>Location: @Model.Location</span>
            <span>Cuisine: @Model.Type</span>
        </div>
        <div class="card-footer">
            <a class="btn btn-danger"
               asp-page="./Detail"
               asp-route-restaurantId="@Model.Id">View Restaurant
            </a>
            <a class="btn btn-danger"
               asp-page="./Edit"
               asp-route-restaurantId="@Model.Id">
                Edit Restaurant
            </a>
            <a class="btn btn-danger"
               asp-page="./Delete"
               asp-route-restaurantId="@Model.Id">
                Delete Restaurant
            </a>
        </div>
        </div>
